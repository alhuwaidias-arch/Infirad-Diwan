# ديوان المعرفة - Production Environment Configuration Template
# Copy this file to .env.production and fill in your actual values

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================
NODE_ENV=production
PORT=3000

# ============================================================================
# SUPABASE DATABASE CONNECTION
# ============================================================================
DB_HOST=your-project.supabase.co
DB_PORT=5432
DB_NAME=postgres
DB_USER=postgres
DB_PASSWORD=your_database_password_here

# Database Connection Pool Settings
DB_MAX_CONNECTIONS=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# ============================================================================
# JWT AUTHENTICATION
# ============================================================================
# Generate with: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_here_generate_with_openssl
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# ============================================================================
# CORS CONFIGURATION
# ============================================================================
# For development: Allow all origins
# CORS_ORIGIN=*

# For production: Specify your frontend domains
CORS_ORIGIN=https://your-domain.com,https://www.your-domain.com

# ============================================================================
# FRONTEND URL
# ============================================================================
FRONTEND_URL=https://your-frontend-url.com

# ============================================================================
# EMAIL CONFIGURATION (Optional)
# ============================================================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_specific_password
# EMAIL_FROM=noreply@your-domain.com
# EMAIL_FROM_NAME=ديوان المعرفة

# ============================================================================
# AI SERVICE CONFIGURATION (Optional)
# ============================================================================
# AI_SERVICE_URL=http://localhost:5000
# AI_API_KEY=your_ai_api_key_here

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================================================
# FILE UPLOAD CONFIGURATION
# ============================================================================
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=info
LOG_FILE=logs/app.log

# ============================================================================
# SECURITY
# ============================================================================
BCRYPT_ROUNDS=10
# Generate with: openssl rand -base64 32
SESSION_SECRET=your_session_secret_here_generate_with_openssl

# ============================================================================
# FEATURE FLAGS
# ============================================================================
ENABLE_REGISTRATION=true
ENABLE_COMMENTS=false
ENABLE_ANALYTICS=true
ENABLE_EMAIL_NOTIFICATIONS=false
